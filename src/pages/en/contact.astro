---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("pages", "en/contact");
const { contact_form_action } = config.params;
const { title, description, meta_title, image } = entry.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={title} meta_title={meta_title}/>
  <section class="section-sm">
    <div class="container">
      <div class="row">
        <div class="text-center mx-auto md:col-4 lg:col-4">
          <div class="p-8 border-2 rounded-xl border-slate-900/10 dark:border-slate-300/10 my-2">
            <h4>Email</h5>
            <p class="mt-3"><a href="mailto:info@antlify.hu">info@antlify.hu</a></p>
          </div>
        </div>
        <div class="text-center mx-auto md:col-4 lg:col-4">
          <div class="p-8 border-2 rounded-xl border-slate-900/10 dark:border-slate-300/10 my-2">
            <h4>Phone</h5>
            <p class="mt-3"><a href="tel:+36305495237">+36 30 549 52 37</a></p>
          </div>
        </div>
        <div class="text-center mx-auto md:col-4 lg:col-4">
          <div class="p-8 border-2 rounded-xl border-slate-900/10 dark:border-slate-300/10 my-2">
            <h4>Tax number</h5>
            <p class="mt-3">HU32119279</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>

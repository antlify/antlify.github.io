---
import { Image } from "@astrojs/image/components";
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntryBySlug } from "astro:content";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from "../../i18n/ui";
import Reveal from 'reveal.js';

export async function getStaticPaths() {
  const paramsArray = Object.keys(languages).map(lang => {
    return { params: { lang } };
  });
  return paramsArray;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const entry = await getEntryBySlug("pages", lang + "/about");
const { Content } = await entry.render();
const { title, description, meta_title, image } = entry.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>

<reveal>
  <div class="reveal">
    <div class="slides">
      <!-- Add your Reveal.js slides -->
    </div>
  </div>
</reveal>
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center md:col-10 lg:col-7">
          {
            image && (
              <img
                class="mx-auto mb-6 rounded-lg bg-slate-100 p-6"
                src={image}
                width={200}
                height={200}
                alt={title}
              />
            )
          }
          <h1 set:html={markdownify(title)} class="h3 mb-6 md:text-4xl lg:text-6xl" />
          <div class="content">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>

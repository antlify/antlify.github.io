---
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import { humanize } from "@/lib/utils/textConverter";

const { meta_title, title } = Astro.props;
---

<section>
  <div class="container text-center">
    <div
      class="rounded-2xl bg-gradient-to-b from-slate-100 to-slate-100 px-8 py-14 dark:from-darkmode-body dark:to-darkmode-theme-light"
    >
      <h1 set:text={humanize(title)} class="md:text-4xl lg:text-6xl" />
      <Breadcrumbs className="mt-6" meta_title={meta_title} title={title}/>
    </div>
  </div>
</section>

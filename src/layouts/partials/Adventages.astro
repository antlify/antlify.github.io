---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "@astrojs/image/components";
const { adventages } = Astro.props;
---

{
  adventages.data.enable && (
<div class="mt-8">
  <h2 class="text-3xl" set:html={markdownify(adventages.data.title)} />
  <p class="mt-4" set:html={markdownify(adventages.data.description)} />

  <div class="max-w-xl py-12 mx-auto text-left lg:max-w-7xl">
    <div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:grid-cols-3 lg:space-y-0">
        {adventages.data.adventages.map(
          (item: {
            content: string;
            name: string;
          }) => (

            <div>
              <div>
                <div class="flex items-center justify-center w-12 h-12 text-black bg-white bg-opacity-60 backdrop-blur hover:bg-opacity-70 rounded-xl">
                  ‚ùñ
                </div>
                <h6 class="mt-4 text-lg" set:text={item.name} />
              </div>
              <div class="mt-4 text-base text-gray-500" set:html={markdownify(item.content)} />
            </div>

          )
        )}

      </div>
    </div>
  </div>
</div>

    )
  }
